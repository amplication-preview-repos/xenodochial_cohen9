datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Workout {
  createdAt   DateTime   @default(now())
  description String?
  duration    Int?
  exercises   Exercise[]
  id          String     @id @default(cuid())
  name        String?
  updatedAt   DateTime   @updatedAt
  user        User?      @relation(fields: [userId], references: [id])
  userId      String?
}

model Exercise {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  reps        Int?
  sets        Int?
  updatedAt   DateTime @updatedAt
  workout     Workout? @relation(fields: [workoutId], references: [id])
  workoutId   String?
}

model Diet {
  calories    Int?
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model Progress {
  bodyFat   Float?
  createdAt DateTime  @default(now())
  date      DateTime?
  id        String    @id @default(cuid())
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
  weight    Float?
}

model User {
  createdAt  DateTime   @default(now())
  diets      Diet[]
  email      String?    @unique
  firstName  String?
  id         String     @id @default(cuid())
  lastName   String?
  password   String
  progresses Progress[]
  roles      Json
  updatedAt  DateTime   @updatedAt
  username   String     @unique
  workouts   Workout[]
}
